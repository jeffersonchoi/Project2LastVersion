<div class="container">


	<table class="table table-hover">

<table>
	<tr>
    <th> Item ID </th>
		<th> Item Name </th>
		<th> Stock Quantity </th>
		<th> Item Price </th>
    <th> Item Active? </th>
		<th> Posted Time </th>
		<% if current_user == @user %>
		<th> Destroy item? </td>
		<% end %>

	</tr>
		<tr>
      <td> <%= @item.id %> </td>
			<td> <%= @item.item_name %> </td>
			<td> <%= @item.stock_quantity %> </td>
