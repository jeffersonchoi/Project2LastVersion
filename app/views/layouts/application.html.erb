<!DOCTYPE html>
<html>
<head>
  <title>Project2final</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
</head>
<body>

<% if current_user %>

<nav class="navbar navbar-inverse">
<div class="container-fluid">
  <div class="navbar-header">
    <a class="navbar-brand">Failure</a>
  </div>
  <div>
    <ul class="nav navbar-nav">
      <li><%= link_to "Users List", users_path %></li>
      <li class="active"><%= link_to "Items List", items_path %> </li>
      <li><%= link_to "Upload New Item", new_user_item_path(current_user) %> </li>
      <li><%= link_to "My Items", user_items_path(current_user) %>
      <li><%= link_to "Checkout", checkout_path %> </li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to "Edit My Profile", edit_user_path(current_user)%> </li>
      <li>Logged in as: <%= current_user.first_name %> </li>
      <li><%= link_to 'Log Out', logout_path, class:"glyphicon glyphicon-log-in", method: :delete %></li>
    </ul>
  </div>
</div>
</nav>





  <% else %>
  <nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">WebSiteName</a>
    </div>
    <div>
      <ul class="nav navbar-nav">
        <li class="active"><a href="#">Home</a></li>
<!--         <li><%= link_to "Users List", users_path %></li> -->
        <li><%= link_to "Items List", items_path %> </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to ' Sign Up', new_user_path, class:"glyphicon glyphicon-user" %> </li>
        <li><%= link_to ' Log In', login_path, class:"glyphicon glyphicon-log-in" %></li>
      </ul>
    </div>
  </div>
</nav>
  <% end %>
<%= yield %>

</body>
</html>
