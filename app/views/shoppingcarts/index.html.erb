<h1><%= current_user.first_name %>'s order Lists</h1>


<table>
	<tr>
		<th> Shoppingcart ID </th>
		<th> Total Price  </th>
    <th> Active </th>
    <th> Date </th>


	</tr>
    <% @shoppingcarts.each do |shoppingcart| %>
		<tr>
			<td> <%= shoppingcart.id %> </td>
			<td> <%= shoppingcart.total %> </td>
      <td> <%= shoppingcart.order_active %> </td>
      <td> <%= shoppingcart.created_at %> </td>
      <td> <%= link_to "Details", shoppingcart_path(shoppingcart) %>
      <% end %>
		</tr>
</table>
